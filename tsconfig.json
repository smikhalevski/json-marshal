{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "noUnusedLocals": true,
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "strict": true,
    "target": "ES6",
    "module": "ES6",
    "outDir": "./lib",
    "lib": ["ES2023", "DOM", "DOM.Iterable"]
  },
  "include": ["./src/**/*.ts"]
}
